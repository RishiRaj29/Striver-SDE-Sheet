/*

Push the array elements in hash map. 

Then the problem is similar to Kadane's Algo where we need to find the max number of non zero freq for elements in the hash map.

*/

class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        if(nums.size()==0)
            return 0;
        map<int,int> hash;
        for(auto i:nums)
            hash[i]++;

        int count=1,ans=0,prev=hash.begin()->first;
        
        for(auto it=next(hash.begin());it!=hash.end();it++)
        {
            if(prev+1==it->first and it->second>=1)
            {
                count++;
            }
            else
            {
                ans=max(ans,count);
                count=1;
            }
            prev=it->first;
        }
        ans=max(ans,count);
        return ans;
    }
};
